<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.maxaltena.socialkit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/socialkit_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/socialkit_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".SettingsActivity"></activity>
        <activity android:name=".UserActivity" />
        <activity android:name=".SocialActivity" />
        <activity android:name=".AddPlatformActivity" />
        <activity android:name=".AddSocialsActivity" />
        <activity android:name=".CameraActivity" />
        <activity android:name=".AddUsername" />
        <activity
            android:name=".QrPopUp"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>